# TaskFlow Environment Variables
# Скопируйте этот файл в .env и заполните своими значениями

# PostgreSQL Database
POSTGRES_PASSWORD=your_strong_password_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Database Connection String (для backend функций)
# Формат: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://taskflow_user:your_strong_password_here@postgres:5432/taskflow_db

# Environment
PYTHON_ENV=production

# Optional: Логирование
LOG_LEVEL=info
